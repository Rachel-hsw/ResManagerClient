<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/orange_color"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/title_left_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleType="center"
        android:src="@drawable/title_back_ico" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/search_input_edit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/guige_bg_p"
            android:drawableLeft="@drawable/search_bar_icon_normal"
            android:drawablePadding="5dp"
            android:hint="请输入搜索关键字"
            android:imeOptions="actionSearch"
            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:singleLine="true"
            android:textColor="@color/drak_gray"
            android:textColorHint="@color/edit_hint_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/sixteen_size" />
    </LinearLayout>

</LinearLayout>