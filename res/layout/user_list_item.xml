<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="000010"
            android:textColor="@color/drak_gray"
            android:textSize="@dimen/login_page_title_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/work_id_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="850KG塑桶"
                android:textColor="@color/middle_gray"
                android:textSize="@dimen/fourteen_size"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/user_type_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="驾驶员"
                android:textColor="@color/middle_gray"
                android:textSize="@dimen/fourteen_size"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/is_select_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:src="@drawable/go"
        android:visibility="visible" />

</LinearLayout>