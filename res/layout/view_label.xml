<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="卸货单"
                android:textColor="@color/red"
                android:textSize="@dimen/sixteen_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/fg_color" />

            <ImageView
                android:id="@+id/uploading_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_img" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="发货信息"
                android:textColor="@color/red"
                android:textSize="@dimen/sixteen_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/fg_color" />

            <TextView
                android:id="@+id/delivery_location_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/go"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="位置：江苏省无锡市江阴市红星路"
                android:textColor="@color/middle_gray"
                android:textSize="@dimen/sixteen_size" />

            <com.resmanager.client.view.DefineGridView
                android:id="@+id/delivery_goods_img_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="@drawable/transparent"
                android:dividerHeight="10dp"
                android:horizontalSpacing="10dp"
                android:listSelector="@drawable/transparent"
                android:numColumns="2"
                android:padding="10dp"
                android:verticalSpacing="10dp" >
            </com.resmanager.client.view.DefineGridView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="卸货信息"
                android:textColor="@color/red"
                android:textSize="@dimen/sixteen_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/fg_color" />

            <TextView
                android:id="@+id/uploading_location_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/go"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="位置：江苏省无锡市江阴市红星路"
                android:textColor="@color/middle_gray"
                android:textSize="@dimen/sixteen_size" />

            <com.resmanager.client.view.DefineGridView
                android:id="@+id/uploading_goods_img_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:divider="@drawable/transparent"
                android:dividerHeight="10dp"
                android:horizontalSpacing="10dp"
                android:listSelector="@drawable/transparent"
                android:numColumns="2"
                android:padding="10dp"
                android:verticalSpacing="10dp" >
            </com.resmanager.client.view.DefineGridView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>