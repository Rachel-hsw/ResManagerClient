<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/goods_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop" >
    </ImageView>

    <TextView
        android:id="@+id/label_code_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="000119"
        android:textColor="@color/drak_gray"
        android:textSize="@dimen/sixteen_size"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/goods_type_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:text="抗飞溅DTY油迹（TF-702B）"
        android:textColor="@color/drak_gray"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/goods_package_type_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="170kg塑桶"
        android:textColor="@color/drak_gray"
        android:textStyle="italic"
        android:visibility="visible" />

</LinearLayout>